@model IEnumerable<EmployeeSchedule.MVC.Models.ViewModel.EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <div class="col-sm-6">
        <input type="text" class="form-control" id="employeeSearchText" />
    </div>
    <div class="col-sm-3">
        <input id="employeeSearch" width="100" type="button" value="Search" class="btn-outline-primary" />
    </div>
    <div class="col-sm-3">
        <input width="100" type="button" value="Reset" class="btn-outline-primary" />
@*        <a asp-controller="Employee" asp-action="Index" width="100" value="Reset" class="btn btn-outline-primary" />*@
    </div>
    <div class="col-sm-6">
        <select id="employeeSortCriteria" name="SortEmployees" class="form-control">
            <option value="Name">Name</option>
            <option value="Surname">Surname</option>
            <option value="Email">Email</option>
            <option value="Possition">Possition</option>
            <option value="Company">Company</option>
        </select>
    </div>
    <div class="col-sm-3">
        <input id="employeeSort" type="button" width="100" value="Sort" class="btn-outline-primary" />
    </div>
</div>
<div class="table-info">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Number)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Possition)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Administrator)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody id="employeeResultInsert">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Possition)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Administrator)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Company.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
