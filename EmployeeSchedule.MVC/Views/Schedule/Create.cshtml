@model EmployeeSchedule.MVC.Models.Create.ScheduleCreate

@{
    ViewData["Title"] = "Create";
}

<h1>View</h1>

<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee" class="control-label"></label>
                <select asp-for="Employee.Id" asp-items="@Model.EmployeesSelectList" class="form-control">
                </select>
                <span asp-validation-for="Employee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input type="date" asp-for="Date" class="form-control" value="@DateTime.Now" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShiftWork" class="control-label"></label>
                <input asp-for="ShiftWork" class="form-control" />
                <span asp-validation-for="ShiftWork" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notification" class="control-label"></label>
                <input type="text" asp-for="Notification" class="form-control" />
                <span asp-validation-for="Notification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @if (!string.IsNullOrEmpty(@Model.ValidationMessage))
            {
                <div>
                    <p style="color:green">@Model.ValidationMessage</p>
                </div>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
